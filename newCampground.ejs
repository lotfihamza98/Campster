<%- include ('partials/header.ejs'); -%>

<div class="container">
	
	<div class="row">
		<h1 style="text-align: center;">Create a campground</h1>
		<div style="width: 30%; margin: 25px auto; ">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">
				</div>
				<button class="btn btn-lg btn-primary btn-block" style="margin: 0 0 25px 0;">Add campground</button>
			</form>
			<a href="/campgrounds">Views all campgrounds</a>
		</div>
	</div>
</div>
<%- include ('partials/footer.ejs'); -%>